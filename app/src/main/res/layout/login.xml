<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qianlan"
    >

    <FrameLayout  android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="35dp"
            android:background="@color/fen"
            android:ems="10"
            android:gravity="center"
            android:hint="username" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="276dp"
            android:layout_marginBottom="35dp"
            android:background="@color/llv"
            android:ems="10"
            android:gravity="center"
            android:hint="password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="100dp"
            android:background="@color/foot_txt_gray"
            android:gravity="center"
            android:text="您好，请输入用户名和密码" />

        <Button
            android:id="@+id/button1"
            android:layout_width="228dp"
            android:layout_height="95dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="340dp"
            android:layout_weight="0.53"
            android:background="@color/huang"
            android:text="登录" />

        <Button
            android:id="@+id/button2"
            android:layout_width="184dp"
            android:layout_height="94dp"
            android:layout_marginTop="340dp"
            android:layout_weight="0.53"
            android:background="@color/green"
            android:text="重置" />


        <!--		<LinearLayout-->
        <!--			android:layout_width="match_parent"-->
        <!--			android:layout_height="wrap_content" >-->

        <!--			-->
        <!--		</LinearLayout>-->

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>